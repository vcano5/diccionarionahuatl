<!DOCTYPE html>
<html lang="es">
<head>
    <%- include ('../partials/head') -%>
      <meta property="og:title" content="<%=palabra.espanol%>" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://nahuatl.herokuapp.com/palabra?c=<%=palabra.clave%>" />
    <meta property="og:image" content="https://image.flaticon.com/icons/svg/207/207127.svg" />
    <title><%= palabra.espanol%> - Diccionario Nahuatl</title>

</head>

<header>
    <%- include ('../partials/header') -%>
</header>
<body>
  <div class="container text-dark"> 
<br>


<div class="table-responsive">
  <table class="table table-borderless text-dark">
    <thead>
      <tr >
        <th scope="col" ><h1><%=palabra.espanol%><h4 class="display-4 text-dark" style="font-size: 16px">PALABRA</h4></h1></th>
      </tr>
    </thead>
    <tbody>
      <tr>

        <td class="align-middle">
          <p>Nahuatl: <%=palabra.nahuatl%></p>
          <br>
          <p>Autor: <a href="/publicaciones?matricula=<%=palabra.matricula%>"><%=palabra.matricula%></a></p>
        </td>
        <% if(modificar) { %>
      <tr>
        <td>
          <div class="btn-group btn-group-sm" role="group" aria-label="Opciones">
            <div class="btn-group mr-2" role="group">
                <a href="/eliminar?c=<%=palabra.clave%>" class="text-white btn btn-danger">Eliminar </span></a> 
            </div>

            <div class="btn-group mr-2" role="group">

               
                <a href="/modificar?c=<%=palabra.clave%>" class=" btn btn-warning" id="desactivado">Modificar </a> 
              
            </div>

            <div class="btn-group mr-2" role="group">
              <button class="btn btn-primary" onclick="toggleComments()"> Comentarios 
                <a class="badge badge-dark"><span class="fb-comments-count"></span></a> 
              </button>
            </div>
          </div>
        </td>
      </tr>
      <%} %>
    </tr>
  </tbody>
</table>
<table class="pb-3">
        <td><a data-toggle="collapse" href="#extraInfo" role="button" aria-expanded="false" aria-controls="extraInfo" href="#extraInfo"><i class="fa fa-plus" aria-hidden="true"></i> Informacion adicional
</a></td>
      </tr>
    </tbody>

  </table>
  

  <div class="collapse py-3" id="extraInfo">
<table class="table table-borderless text-dark">
      <tbody>
        <tr>

          <td class="align-middle">

            <p>Transliteracion: <%=palabra.transliteracion%></p>
            <br>
            <p>Raiz: <%=palabra.raiz%></p>
            <br>
            <p>Historia: <%=palabra.historia%></p>
            <br>
            <p>Aspectos historicos: -<%=palabra.historicos%></p>
            <br>
            <p>Aspectos evolutivos: -<%=palabra.evolutivos%></p>
            <br>
            <p>Origenes: <%=palabra.origenes%></p>
            <br>
            <p>Morfologia: <%=palabra.morfologia%></p>
            <br>
            <p>Morfemas: <%=palabra.morfemas%></p>
            <br>
            <p>Semiotica: <%=palabra.semiotica%></p>
          </td>
  
      </tbody>
  </table>
  </div>
  <div class="py-3" style="background-color: #ffffff; background: #ffffff" id="ccomentarios">
    <div class="fb-like m-2" id="likes" data-href="https://nahuatl.vcano5.com/clave?c=<%=palabra.clave%>" data-width="" data-layout="standard" data-action="like" data-size="large" data-share="true"></div>
  <div class="fb-comments bg-light" id="comentarios" data-href="http://nahuatl.vcano5.com/palabra?c=<%=palabra.clave%>" data-width="90%" data-numposts="5"></div>
</div>
</div>
</div>
</body>
</html>


<script type="text/javascript">
  var b = 1;
  function toggleComments() {
    if(b == 0) {
      document.getElementById('comentarios').style.display = "none";
      document.getElementById('ccomentarios').style.display = "none";
      document.getElementById('likes').style.display = "none";
      b = 1;
    }

    else if(b == 1) {
      document.getElementById('ccomentarios').style.display = "";
      document.getElementById('comentarios').style.display = "";
      document.getElementById('likes').style.display = "";
      b = 0;
    }
  }
</script>
<style type="text/css">
  #desactivado:hover {
    content: "Desactivado temporalmente";
  }
  #desactivadob:hover {
    background-color: lightgray;
    content: "Desactivado temporalmente"
    border: 0px;
  }
</style>